<!-- Modal HTML -->
<div id="candidate_interested_modal" class="modal fade">
    <div class="modal-dialog modal-login">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Are you Interested ?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <select id="requirement_title_select" class="form-control">
                        <option value="Project Outsource">Project Outsource</option>
                        <option value="offshore">Offshore</option>
                        <option value="Onsite">onsite</option>
                        <option value="T&M">T&M</option>
                        <option value="discussion">Open for discussion</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="requirement_title" name="password" placeholder="Interested Title" required="required">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" id="requirement_description" name="interested_description" placeholder="Type a description..." required="required"></textarea>
                </div>
                
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" onclick="Candidate.SaveInterested()" class="btn btn-primary btn-lg btn-block">Interested ?</button>
                </div>
            </div>
        </div>
    </div>
</div>  

