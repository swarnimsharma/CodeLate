@model List<Portal.ViewModels.PlansViewModel>


@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;background-color:white;">
        <table class="table table-bordered table-hover" id="table_get_all_planlist">
            <thead>
                <tr>
                    <th><center>ID</center></th>
                    <th><center>Name</center></th>
                    <th><center>Is Active</center></th>
                    <th><center>Action</center></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.pk_plan_id</td>
                        <td>@item.plan_name</td>
                        @if (item.is_active)
                        {
                            @:<td style="text-align:center">
                                <span style="background-color: #28a745" class="badge badge-success">Active</span>
                            @:</td>
                        }
                        else
                        {
                              <td style="text-align:center">
                                  <span style="background-color: #dd4b39" class="badge badge-danger">InActive</span>
                              </td>
                        }
                            <td class="" style="margin:0px auto;text-align:center">
                                <a style="color:darkblue" title="Edit" class="fa fa-edit" aria-hidden="true" href="#" onclick="AdminPlans.OpenPlanGetById(@item.pk_plan_id)"></a> &nbsp;&nbsp;
                                <a style="color:darkblue" title="Delete" class="fa fa-trash" aria-hidden="true" href="#" onclick="AdminPlans.OpenVendorPlanGetById(@item.pk_plan_id)"></a>
                            </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
<section class="content">
    <div class="error-page">
        <div class="error-content">
            <h3><i class="fa fa-warning text-yellow"></i> Oops! There is no record.</h3>

            <p>
                Please  <a href="#" onclick="AdminPlans.OpenPlanModal()" class="fa fa-hand-o-right">  <b>click here</b></a> to add a first Plan.
            </p>
        </div>
        <!-- /.error-content -->
    </div>
    <!-- /.error-page -->
</section>
    /**/
}