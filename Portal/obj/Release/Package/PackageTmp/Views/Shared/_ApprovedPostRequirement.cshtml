<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default" id="approv_reject_panel" style="display:none">
            <div class="panel-heading">Post Status</div>
            <div class="panel-body">
                <div class="row">
                    <input type="hidden" id="hidden_post_requirement_id" />
                    <div class="form-group col-md-12 col-xs-12" style="">
                        <div class="alert alert-info" style="background-color: #d9edf7;color: #31708f;border-color: #bce8f1;">
                            <strong>Info!</strong> You have Selected Post #<span id="post_requirement_no"></span>
                        </div>
                    </div>
                </div>
                <div class="row" style="">

                    <div class="form-group col-md-6  col-xs-12">
                        <label for="example-email" class="">Status</label>
                            <select id="post_requirement_status" class="form-control form-control-line" onchange="Admin.ShowOnStatusChange(this.value)">
                                <option value="">Select Status</option>
                                <option value="2">Reject</option>
                                <option value="1">Approve</option>
                            </select>
                    </div>

                    <div class="form-group col-md-6  col-xs-12" id="hidden_requirement_vendors"  style="display:none">
                        <label for="example-email" class="col-md-12 col-xs-12">Select Vendor</label>
                        <select id="post_requirement_vendors" class="form-control form-control-line" onchange="" multiple></select>
                    </div>
                </div>
                <div class="row" style="">
                    <div class="form-group col-md-12  col-xs-12">
                        <label for="example-email" class="col-md-12 col-xs-12">Reasons:</label>
                        <textarea class="form-control form-control-line" id="post_requirement_reason" rows="2"></textarea>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <button type="button" class="btn btn-secondary pull-right" onclick="Admin.CancelPostRequirement()">Close</button>
                <button type="button" class="btn btn-primary pull-right" onclick="Admin.SubmitPostRequirement()">Save changes</button>
            </div>
        </div>
    </div>
</div>



